.pull-left
  float left

.pull-right
  float right

.clearfix
  clear both
  float none

.fa-icon
  width auto
  height 1em

.background-white
  background-color white !important

.text-white
  color white

// Transitions
.fade-enter-active, .fade-leave-active {
  transition: opacity 0.2s
}
.fade-enter, .fade-leave-to /* .fade-leave-active in <2.1.8 */ {
  opacity: 0
}
.fade-enter-to, .fade-leave /* .fade-leave-active in <2.1.8 */ {
  opacity: 1
}

// Content block

.main-container
  radius(4px)

.content-block
  radius(4px)
  padding 20px
  margin 20px 0 0 0
  &.white-block
    background-color white

// Icons

.icon-margin
  margin 0 5px
