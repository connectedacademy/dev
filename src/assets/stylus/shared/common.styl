html, body
  margin 0
  padding 0

#app
  font-family 'Avenir', Helvetica, Arial, sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.pull-left
  float left

.pull-right
  float right

.clearfix
  clear both
  float none

.fa-icon
  width auto
  height 1em

.background-white
  background-color white !important

.text-white
  color white

.drawer
  background-color $color-darkest-purple
  overflow scroll
  padding-bottom 60px
  position fixed
  z-index 51

.content-overlay
  background-color rgba(0, 0, 0, 0)
  pointer-events none
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  transition background-color 0.6s
  z-index -1
  &.visible
    background-color rgba(0, 0, 0, 0.8)
    pointer-events all
    z-index 50

// Buttons

.pure-button.full-width
  display block
  margin-bottom 10px
