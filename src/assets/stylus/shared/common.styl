html, body
  font-family $font-family
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  margin 0
  padding 0

.hidden, [v-cloak]
  display none

.pull-left
  float left

.pull-right
  float right

.clearfix::after
  content ""
  clear both
  display table
  float none

.no-margin
  margin 0 !important

.no-padding
  padding 0 !important

.padding
  padding 20px !important

.background-white
  background-color white !important

// Content block

.main-container
  radius($corner-radius)
  position relative
  @media(max-width: 800px)
    radius(0)
  &.main-container-padded
    padding 20px

.content-block
  radius($corner-radius)
  padding 20px
  margin 0 0 20px 0
  &.white-block
    background-color white
  &.padded-block
    padding 20px
  &.unpadded-block
    padding 0
  &.header-block
    margin-top 20px
    overflow hidden

.content-wrapper
  .content-item
    radius($corner-radius)
    background-color white
    margin $tile-spacing 0 0 0
    overflow hidden
    padding 20px
    position relative
    @media(max-width: 860px)
      margin-top $tile-spacing-mobile

// Transitions
.fade-enter-active, .fade-leave-active
  animate()

.fade-enter, .fade-leave-to
  opacity 0

.slide-top-enter-active, .slide-top-leave-active
  animate()

.slide-top-enter, .slide-top-leave-to
  transform translateY(-100%)
  opacity 0
.slide-top-enter
  transition-delay 2s

.particles-js-canvas-el
  pinned()
  position fixed
  pointer-events none
  z-index -1