html, body
  margin 0
  padding 0

#app
  font-family 'Avenir', Helvetica, Arial, sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.pull-left
  float left

.pull-right
  float right

.clearfix
  clear both
  float none

.fa-icon
  width auto
  height 1em

.video-wrapper
  bottom 40px
  right 40px
  position fixed
  width 320px
  .video-container
    background-color alpha(white, 0.025)
    box-sizing border-box
    height 0
    overflow hidden
    padding 0
    padding-bottom 56.25%
    position relative
    width 100%
    iframe, object, embed
      position absolute !important
      top 0 !important
      left 0 !important
      width 100% !important
      height 100% !important

.drawer
  background-color $color-dark-grey
  overflow scroll
  padding-bottom 60px
  position fixed
  z-index 51

.content-overlay
  background-color rgba(0, 0, 0, 0.1)
  pointer-events none
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  transition background-color 0.6s
  z-index -1
  &.visible
    background-color rgba(0, 0, 0, 0.5)
    pointer-events all
    z-index 50
