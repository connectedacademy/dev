.pull-left
  float left

.pull-right
  float right

.clearfix
  clear both
  float none

.fa-icon
  width auto
  height 1em

.background-white
  background-color white !important

.text-white
  color white

// Buttons

.pure-button
  &.full-width
    display block
    margin-bottom 10px

  &.pure-button-success
    background-color $color-success
    color white

// Transitions

.fade-enter-active, .fade-leave-active
  transition opacity .5s

.fade-enter, .fade-leave-to /* .fade-leave-active in <2.1.8 */
  opacity 0

.fade-enter-to, .fade-leave
  opacity 1

// Content block

.content-block
  radius(4px)
  padding 20px
  margin 20px 0 0 0
  &.white-block
    background-color white
