transition()
  -webkit-transition: arguments;
  -moz-transition: arguments;
  -o-transition: arguments;
  transition: arguments;

transform()
  -webkit-transform: arguments;
  -moz-transform: arguments;
  -o-transform: arguments;
  transform: arguments;

segment-animate()
  -webkit-transition: all 0.6s ease;
  -moz-transition: all 0.6s ease;
  -o-transition: all 0.6s ease;
  transition: all 0.6s ease;

animate()
  -webkit-transition: all 0.3s ease;
  -moz-transition: all 0.3s ease;
  -o-transition: all 0.3s ease;
  transition: all 0.3s ease;

// vertical-align()
//   position relative
//   top 50%
//   -webkit-transform translateY(-50%)
//   -ms-transform translateY(-50%)
//   transform translateY(-50%)

pinned()
  top 0
  bottom 0
  left 0
  right 0

nomargin()
  margin 0

nopadding()
  padding 0

reset()
  nomargin()
  nopadding()

cleanlist()
  nomargin()
  nopadding()
  list-style none

hover(background, color = inherit)
  &:hover
    background-color darken(background, 10%)
    color color
    cursor pointer

radius()
  -webkit-border-radius: arguments;
  -moz-border-radius: arguments;
  -o-border-radius: arguments;
  border-radius: arguments;

radius-top()
  -webkit-border-top-left-radius: arguments;
  -webkit-border-top-right-radius: arguments;
  -moz-border-top-left-radius: arguments;
  -moz-border-top-right-radius: arguments;
  -o-border-top-left-radius: arguments;
  -o-border-top-right-radius: arguments;
  border-top-left-radius: arguments;
  border-top-right-radius: arguments;

radius-bottom()
  -webkit-border-bottom-left-radius: arguments;
  -webkit-border-bottom-right-radius: arguments;
  -moz-border-bottom-left-radius: arguments;
  -moz-border-bottom-right-radius: arguments;
  -o-border-bottom-left-radius: arguments;
  -o-border-bottom-right-radius: arguments;
  border-bottom-left-radius: arguments;
  border-bottom-right-radius: arguments;

background-image()
  background-size cover
  background-repeat no-repeat
  background-position center

box-sizing()
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;

box-shadow()
  box-shadow: 0 0 10px 5px alpha(black, 0.01);
  -moz-box-shadow: 0 0 10px 5px alpha(black, 0.01);
  -webkit-box-shadow: 0 0 10px 5px alpha(black, 0.01);

box-shadow-dark()
  box-shadow: 0 0 10px 5px alpha(black, 0.1);
  -moz-box-shadow: 0 0 10px 5px alpha(black, 0.1);
  -webkit-box-shadow: 0 0 10px 5px alpha(black, 0.1);

shadow(opacity)
  box-shadow: 0 0 10px 5px alpha(black, opacity);
  -moz-box-shadow: 0 0 10px 5px alpha(black, opacity);
  -webkit-box-shadow: 0 0 10px 5px alpha(black, opacity);

gradient(leftColor, rightColor)
  background: -moz-linear-gradient(left, darken(leftColor, 10%) 0%, lighten(rightColor, 10%) 100%); /* FF3.6-15 */
  background: -webkit-linear-gradient(left, darken(leftColor, 10%) 0%, lighten(rightColor, 10%) 100%); /* Chrome10-25,Safari5.1-6 */
  background: linear-gradient(to right, darken(leftColor, 10%) 0%, lighten(rightColor, 10%) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */

vertical-gradient(topColor, bottomColor)
  background: -moz-linear-gradient(top, topColor 0%, bottomColor 100%); /* FF3.6-15 */
  background: -webkit-linear-gradient(top, topColor 0%, bottomColor 100%); /* Chrome10-25,Safari5.1-6 */
  background: linear-gradient(to bottom, topColor 0%, bottomColor 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */

placeholderColor()
  &::-webkit-input-placeholder { /* Chrome */
    color: arguments;
  }
  &:-ms-input-placeholder { /* IE 10+ */
    color: arguments;
  }
  &::-moz-placeholder { /* Firefox 19+ */
    color: arguments;
    opacity: 1;
  }
  &:-moz-placeholder { /* Firefox 4 - 18 */
    color: arguments;
    opacity: 1;
  }
