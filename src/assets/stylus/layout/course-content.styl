@import '~stylus/shared'

.course-content-wrapper
  margin-bottom 10px
  &:last-child
    margin-bottom 0
  .course-content-group
    .course-content
      radius(4px)
      box-shadow()
      background-color white
      margin 20px 0 0 0
      min-height 100px
      padding 0
      position relative
      @media(max-width: 800px)
        radius(0)
        margin 20px 0 0 0
      .type-indicator
        radius(50%)
        content ''
        background-color $color-light-grey
        height 16px
        width 16px
        position absolute
        top 10px
        right 10px
        &.active
          background-color $color-success

      h5.content-subheader
        reset()
        color $color-text-dark-grey
        font-weight 300
      p.content-description
        reset()
        color $color-text-grey
        font-size 1em
      a
        text-decoration none

      .course-content--header
        background-color transparent
        padding 20px 20px 10px 20px
        h1.content-title
          reset()
          color $color-text-dark-grey
          font-size 1.3em
          font-weight bold
        &.block
          background-color $color-primary
          padding 30px
          text-align center
          h1.content-title
            color white
            font-size 2em
            font-weight bold
            margin-bottom 10px
          p.content-description
            color white
            margin 0 auto


      .course-content--body
        overflow hidden
        padding 0px 20px 10px 20px
        h1, h2, h3, h4, h5
          font-weight 300
      .course-content--footer
        padding 20px

    &.course-content-group--question
      radius(6px)
      background-color alpha(white, 0.15)
      padding 15px
      margin-top 10px
      .course-content
        margin 0
