@require "../shared/*"

.course-content
  radius(4px)
  background-color white
  margin 20px 0
  padding 0
  position relative
  &:before
    radius(50%)
    content ''
    background-color $color-primary
    height 16px
    width 16px
    position absolute
    top 10px
    right 10px
  h1.content-title
    nomargin()
    nopadding()
    color $color-text-dark-grey
    font-size 1.3em
  h5.content-subheader
    nomargin()
    nopadding()
    color $color-text-dark-grey
  p.content-description
    nomargin()
    nopadding()
    color $color-text-grey
    font-size 1em
  a
    text-decoration none

  .course-content--header
    background-color transparent
    padding 20px 20px 10px 20px
    h1.content-title
      color $color-text-dark-grey !important
  .course-content--body
    overflow hidden
    padding 10px 20px
  .course-content--footer
    background-color transparent
    border-top $color-light-grey 1px solid
    margin-top 10px
    padding 15px

.course-content.pre-content:before
  background-color #FCC04E

.course-content.class-content:before
  background-color $color-primary

.course-content.postclass-content:before
  background-color $color-primary

.course-content.webinar-content:before
  background-color #F97A66

.course-content.postwebinar-content:before
  background-color #F97A66
