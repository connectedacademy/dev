@require "../shared/*"

html
  background-color $color-main-page

.main-page
  padding-top 60px

  .col
    box-sizing border-box
    padding 0
    top 60px

    .container
      padding 20px
      h1
        nomargin()
        nopadding()
        color $color-text-dark-grey
        margin-bottom 5px

  .col#col-main
    border-top-left-radius 4px
    border-top-right-radius 4px
    margin 0 auto 200px auto
    max-width 780px
    @media(max-width: 800px)
      max-width 100%
      margin 0 10px

.content-block
  border-radius 2px
  padding 20px
  margin 20px 0 0 0
  &.white-block
    background-color white

/* App states */

#app.authenticating
  .main-page
    .col
      top 0
