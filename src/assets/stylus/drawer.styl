$drawer-width = 320px


// Transitions
.slide-right-enter-active, .slide-left-enter-active
  animate()

.slide-right-leave-active, .slide-left-leave-active
  animate()

.slide-right-enter, .slide-right-leave-to
  transform translateX(320px)
  right 0

.slide-left-enter, .slide-left-leave-to
  transform translateX(-320px)
  left 0

.drawer
  max-width $drawer-width
  overflow-y auto
  overflow-x hidden
  position fixed
  top 0
  bottom 0
  width calc(100% - 40px)
  z-index 56

  &#drawer-right
    right 0

  &#drawer-left
    left 0

  .card
    radius(6px)
    background-color darken($color-navigation-card, 0%)
    margin 10px
    position relative

    .pure-button.pure-button-action
      background-color alpha(black, 0.1)
      border-color transparent
      color white
      display block
      margin-top 10px
      &:hover
        background-color alpha(black, 0.2)

  ul.drawer-links
    cleanlist()
    text-align center
    li
      cleanlist()
      color white
      display inline-block
      font-size 0.7em
      text-align center
      &:not(:last-child)
        &:after
          content '-'
          padding 0 10px
      a
        color white
        text-decoration none
        &:hover
          text-decoration underline

  /* Drawer List */
  ul.drawer-list
    list-style none
    margin 0
    padding 0
    li.drawer-list-item
      background-color alpha(white, 0)
      list-style none
      margin 0
      padding 15px 40px 15px 25px
      position relative

      h1
        color white
        margin 0
        padding 0
        font-size 1.6em

      h2
        color alpha(white, 0.6)
        margin 0
        padding 0
        font-size 1em
        font-weight normal

      &:hover
        cursor pointer
        background-color alpha(black, 0.05)
