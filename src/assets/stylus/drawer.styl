.drawer
  max-width 320px
  overflow-y auto
  overflow-x hidden
  position fixed
  top 0
  bottom 0
  width calc(100% - 40px)
  z-index 51

  &#drawer-right
    right -320px
    transition right 0.4s
    &.visible
      right 0

  &#drawer-left
    left -320px
    transition left 0.4s
    &.visible
      left 0

  .card
    radius(6px)
    background-color darken($color-drawer-background, 0%)
    margin 10px
    opacity 0
    position relative
    transition background-color 0.6s, left 0.6s, right 0.6s, opacity 0.6s

    for num in (1..100)
      &:nth-child({num}n)
        right (num * -100px)

  &#drawer-right.visible
    .card
      right 0
      opacity 1

  &#drawer-left.visible
    .card
      left 0
      opacity 1

  /* Drawer List */
  ul.drawer-list
    list-style none
    margin 0
    padding 0
    li.drawer-list-item
      background-color alpha(white, 0)
      list-style none
      margin 0
      padding 15px 40px 15px 25px
      position relative

      h1
        color white
        margin 0
        padding 0
        font-size 1.6em

      h2
        color alpha(white, 0.6)
        margin 0
        padding 0
        font-size 1em
        font-weight normal

      &:hover
        cursor pointer
        background-color alpha(black, 0.05)

/* Footer */
.drawer-footer
  pinned()
  background-color darken($color-drawer-background, 10%)
  position absolute
  text-align center
  top auto
  z-index 1
  a.link
    reset()
    animate()
    color white
    display block
    padding 15px
    text-decoration none
    &:hover
      animate()
      background-color darken($color-drawer-background, 15%)
      color white
      cursor pointer
